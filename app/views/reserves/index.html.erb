<p id="notice"><%= notice %></p>

<h1>Listing Room</h1>

<table>
  <thead>
    <tr>
      <th>Room Name</th>
      <th>Status</th>
      <th>From date</th>
      <th>To date</th>
      <th> Reserved By </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_reserves .each do |r| %>
      <% room = Room.find(r.room_id) %>
      <tr>
        <td><%= room.name %></td>
        <td><%= room.status %></td>
        <td><%= room.from_date %></td>
        <td><%= room.to_date %></td>
        <td><%= User.find(r.user_id).name %>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', r, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

